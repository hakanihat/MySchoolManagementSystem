@model List<OnlineExaminationSystem.Models.Exam>

<h1>Exam Detail</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Course</th>
            <th>Description</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Name</td>
                <td>@exam.Course.Name</td>
                <td>@exam.Description</td>
                <td>@exam.StartTime</td>
                <td>@exam.EndTime</td>
                <td>
                    <a href="@Url.Action("Edit", "Exam", new { id = exam.Id })" class="btn btn-primary">Edit</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal-@exam.Id">
                        Delete
                    </button>
                    <a href="@Url.Action("Send", "Exam", new { id = exam.Id })" class="btn btn-success">Send</a>
                </td>
            </tr>

            <div class="modal fade" id="deleteModal-@exam.Id" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Delete Exam</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete this exam?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <a href="@Url.Action("Delete", "Exam", new { id = exam.Id })" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
