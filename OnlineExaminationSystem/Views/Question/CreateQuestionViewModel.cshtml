@using OnlineExaminationSystem.ViewModels
@model CreateQuestionViewModel

<h1>Create questions</h1>

<form asp-action="CreateQuestion" asp-controller="Question" method="post" id="form-id">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select asp-for="CourseId" asp-items="@Model.Courses" class="form-control"></select>
        <span asp-validation-for="CourseId"></span>
    </div>

  
    <div class="form-group">
        <label asp-for="QuestionText"></label>
        <textarea asp-for="QuestionText" class="form-control"></textarea>
        <span asp-validation-for="QuestionText"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuestionType"></label>
        <select asp-for="QuestionType" asp-items="@Model.QuestionTypes" class="form-control"></select>
        <span asp-validation-for="QuestionType"></span>
    </div>

    <div class="form-group">
        <label asp-for="Points"></label>
        <input asp-for="Points" class="form-control" type="number" min="1" max="100" required />
        <span asp-validation-for="Points"></span>
    </div>


        <div class="form-group">
            <label asp-for="Answers"></label>
            <div id="answers-container">
                <div class="form-check">
                    <input class="form-check-input answer-input" type="radio" name="answer" id="answer-1" value="true" />
                    <label class="form-check-label" for="answer-1">
                        <input type="text" name="answer-text" id="answer-text-1" class="form-control answer-text" required />
                    </label>
                    <button class="btn btn-danger delete-answer" type="button">Delete</button>
                </div>
            </div>
            <div class="mt-3">
                <button id="add-answer-btn" type="button" class="btn btn-primary mx-1">Add Answer</button>
                <button id="toggle-answer-type" type="button" class="btn btn-secondary mx-1">Change to Checkbox</button>
               
            </div>
            <div class="mt-3">
                <button id="add-textarea-answer-btn" type="button" class="btn btn-success mx-1">Add Short Answer</button>
                <button id="add-upload-file-btn" type="button" class="btn btn-info mx-1">Add File Upload</button>
            </div>
            <span asp-validation-for="Answers"></span>
            <input type="hidden" name="AnswersJson" id="AnswersJson" />
        </div>


    <button type="submit" class="btn btn-success btn-lg" style="margin-top: 30px">Create</button>
</form>


@section scripts {
    <script src="~/js/addNewAnswer.js" asp-append-version="true"></script>
    <script src="~/js/assignAnswers.js" asp-append-version="true"></script>
    <script src="~/js/addTextAreaAnswer.js" asp-append-version="true"></script>
}
