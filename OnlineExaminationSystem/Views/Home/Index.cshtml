@{
    ViewData["Title"] = "Home Page";
}
<style>
    .big-card {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.7);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

        .big-card .card-title {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .big-card .card-text {
            font-size: 18px;
            margin-bottom: 30px;
        }

        .big-card .btn-circle {
            display: inline-block;
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background-color: #007bff;
            color: #fff;
            font-size: 24px;
            font-weight: bold;
            text-align: center;
            line-height: 200px;
            text-decoration: none;
            transition: background-color 0.3s ease;
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        }

            .big-card .btn-circle:hover {
                background-color: #0056b3;
            }
</style>
<div class="container">
    <div class="container">
        <div class="big-card">
            <h1 class="card-title">Welcome</h1>
            <p class="card-text">Please, login!</p>
            <a href="Identity/Account/Login" class="btn-circle"><i class="bi bi-door-open fs-1"></i></a>
        </div>
    </div>
</div>