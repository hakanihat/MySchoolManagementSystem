@using OnlineExaminationSystem.ViewModels
@model ChatPanelViewModel
<h1>Chat Panel</h1>

@if (Model.ChatRoomIds.Count == 0)
{
    <p>No chat rooms available.</p>
}
else
{
    <ul>
        @for (int i = 0; i < Model.ChatRoomIds.Count; i++)
        {
            <li>
                <strong>Chat Room ID:</strong> @Model.ChatRoomIds[i]
                <br />
                <strong>Chat Room Name:</strong> @Model.ChatRoomNames[i]
                <br />
                <a href="@Url.Action("Index", "ChatRoom", new { id = Model.ChatRoomIds[i] })" class="btn btn-primary">View Chat Room</a>
            </li>
        }
    </ul>
}

<a href="@Url.Action("Create", "ChatRoom")" class="btn btn-primary">Add Chat Room</a>
