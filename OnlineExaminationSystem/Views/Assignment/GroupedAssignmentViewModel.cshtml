@using OnlineExaminationSystem.ViewModels
@model List<GroupedAssignmentViewModel>

<head>
    <link rel="stylesheet" href="~/css/container_alert.css" asp-append-version="true" />
</head>

<div class="container-3d">
    <div class="text-center">
        <div class="d-flex align-items-center mb-3">
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h1 class="mx-auto">Created Assignments&nbsp;&nbsp;&nbsp;&nbsp;</h1>
        </div>
    </div>

    <hr class="separator">
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Max Points</th>
            <th>Course</th>
            <th>Exam</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model)
        {
            <tr>
                <td>@assignment.Title</td>
                <td>@assignment.Description</td>
                <td>@assignment.DueDate</td>
                <td>@assignment.MaxPoints</td>
                <td>@assignment.CourseId</td>
                <td>@assignment.ExamId</td>
                <td>
                    <form asp-action="Delete" asp-route-title="@assignment.Title" asp-route-dueDate="@assignment.DueDate.ToString("yyyy-MM-ddTHH:mm:ss")" method="post">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this assignment?')">Delete</button>
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>
</div>

@section scripts {

    <script src="~/js/examNotificationToastr.js"></script>

}
