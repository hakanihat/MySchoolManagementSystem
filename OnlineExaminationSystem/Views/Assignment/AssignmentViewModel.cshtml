@using OnlineExaminationSystem.ViewModels
@model AssignmentViewModel

<h1>Create Assignment</h1>

<hr />

<form asp-action="Create">

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MaxPoints"></label>
        <input asp-for="MaxPoints" class="form-control" />
        <span asp-validation-for="MaxPoints" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AssignedToUserId"></label>
        <select asp-for="AssignedToUserId" asp-items="@Model.Users" class="form-control">
            <option value="">-- Select a student --</option>
        </select>
        <span asp-validation-for="AssignedToUserId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="ExamId" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>

</form>
