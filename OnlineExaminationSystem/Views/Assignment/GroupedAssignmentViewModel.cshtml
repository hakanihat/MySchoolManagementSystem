@using OnlineExaminationSystem.ViewModels
@model List<GroupedAssignmentViewModel>

<h1>Grouped Assignments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Max Points</th>
            <th>Course</th>
            <th>Exam</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model)
        {
            <tr>
                <td>@assignment.Title</td>
                <td>@assignment.Description</td>
                <td>@assignment.DueDate</td>
                <td>@assignment.MaxPoints</td>
                <td>@assignment.CourseId</td>
                <td>@assignment.ExamId</td>
                <td>
                    <form asp-action="Delete" asp-route-title="@assignment.Title" asp-route-dueDate="@assignment.DueDate.ToString("yyyy-MM-ddTHH:mm:ss")" method="post">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this assignment?')">Delete</button>
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>
