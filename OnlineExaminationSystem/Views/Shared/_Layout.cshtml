<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineExaminationSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/examQuestions.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tableStyles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/buttonStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/timer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineExaminationSystem.styles.css" asp-append-version="true" />
</head>
<body style="background-color:aliceblue">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:darkorange">
            <div class="container-fluid">
                @if (User.IsInRole("admin"))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="AdminHomePage">HIT</a>
                }
                else if (User.IsInRole("teacher"))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="TeacherHomePage">HIT</a>
                }
                else if (User.IsInRole("student"))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="StudentHomePage">HIT</a>
                }     
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("admin"))
                        {
                            <partial name="_AdminPartial" />
                        }
                        else if (User.IsInRole("teacher"))
                        {
                            <partial name="_TeacherPartial" />
                        }
                        else if (User.IsInRole("student"))
                        {
                            <partial name="_StudentPartial" />
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#007bff">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
