@using OnlineExaminationSystem.ViewModels
@model QuestionViewModel

<head>
    <link rel="stylesheet" href="~/css/container_alert.css" asp-append-version="true" />
</head>
<div class="container-3d">
    <div class="header">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div class="centered">
            <h2 class="heading">Question Details</h2>
        </div>
       
    </div>



<div>
    <h4>Question Text</h4>
    <p>@Model.QuestionText</p>
</div>

<div>
    <h4>Question Type</h4>
    <p>@Model.QuestionType</p>
</div>

<div>
    <h4>Points</h4>
    <p>@Model.Points</p>
</div>

<div>
    <h4>Course</h4>
    <p>@Model.CourseId</p>
</div>

<div>
    <h4>Answers</h4>
    <ul>
        @foreach (var answer in Model.Answers)
        {
            <li>
                <span>@answer.AnswerText</span>
                @if (answer.IsCorrect)
                {
                    <span class="text-success">Correct Answer</span>
                }
            </li>
        }
    </ul>
</div>

    <form method="get" asp-action="Edit" asp-route-id="@Model.QuestionId">
        <button type="submit" class="btn btn-primary">Edit Question</button>
    </form>


<form method="post" action="@Url.Action("Delete", "Question", new { id = Model.QuestionId })" onsubmit="return confirm('Are you sure you want to delete this question?');">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete Question</button>
</form>
</div>