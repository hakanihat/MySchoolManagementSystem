@using OnlineExaminationSystem.ViewModels
@model ExamResultViewModel

@{
    ViewData["Title"] = "Edit Exam Result";
}

<h1>Edit Exam Result</h1>

<form asp-action="Edit" asp-controller="ExamResults" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Score" class="control-label">Score:</label>
        <input asp-for="Score" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label">Comment:</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="TotalPoints" class="control-label">Total Points:</label>
        <input asp-for="TotalPoints" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CorrectAnswers" class="control-label">Correct Answers:</label>
        <input asp-for="CorrectAnswers" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ExamName" class="control-label">Exam Name:</label>
        <input asp-for="ExamName" class="form-control" readonly />
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Question</th>
                <th>Answer</th>
                <th>Points</th>
            </tr>
        </thead>
        <tbody>
         @*   @foreach (var answer in Model.StudentAnswers)
            {
                <tr>
                    <td>@answer.QuestionText</td>
                    <td>@answer.AnswerText</td>
                    <td>@answer.Points</td>
                </tr>
            }*@
        </tbody>
    </table>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Edit" asp-controller="ExamResults" asp-route-assignmentId="@Model.Id" class="btn btn-secondary">Back to Submissions</a>
    </div>
</form>
